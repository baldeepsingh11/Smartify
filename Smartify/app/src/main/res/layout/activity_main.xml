<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="387dp"
        android:layout_height="319dp"
        android:layout_marginBottom="302dp"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/smartify"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="118dp"
        android:layout_height="26dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_blue"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:orientation="vertical"
        app:rowCount="2">

        <Button
            android:id="@+id/Flip"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_green"
            android:gravity="center_vertical"
            android:onClick="Flip"
            app:layout_column="0"
            app:layout_row="0" />
        <Button
            android:id="@+id/location"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_location"
            android:gravity="center_vertical"
            android:onClick="location"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="0" />


        <Button
            android:id="@+id/autoRotate"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_auto_rotate"
            android:gravity="center_vertical"
            android:onClick="Rotate"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/earphone"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_earphone"
            android:gravity="center_vertical"
            android:onClick="Earphone"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>